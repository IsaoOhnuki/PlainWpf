<UserControl x:Class="PlainWpf.Views.SubPage5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlainWpf.Views"
             xmlns:ViewModels="clr-namespace:PlainWpf.ViewModels"
             xmlns:Behaviors="clr-namespace:Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:SubPage5ViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <Button Content="Prev" Command="{Binding Undo}"/>
            <Button Content="Next"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Width"/>
                <TextBox Text="{Binding ActualSize.Width}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Height"/>
                <TextBox Text="{Binding ActualSize.Height}"/>
            </StackPanel>
        </StackPanel>
        <InkCanvas Grid.Column="1" Behaviors:InkCanvasBehavior.Strokes="{Binding Strokes}" Behaviors:InkCanvasBehavior.ActualSizeChanged="{Binding ActualSizeChanged}"/>
    </Grid>
</UserControl>
