<UserControl x:Class="PlainWpf.Views.Thread"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlainWpf.Views"
             xmlns:ViewModels="clr-namespace:PlainWpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:ThreadViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="151,138,0,0" VerticalAlignment="Top" Width="75" Command="{Binding RunCommand}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="376,146,0,0" TextWrapping="Wrap" Text="{Binding Result}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
